html
head
    title= title
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel="stylesheet", href="css/main.css")
    body
    
        form(name='add', method='POST', action='todos')
            div
                input(type="text", name="description" , placeholder='Add a new task')
                input(type='submit', value='add')
        if(todos.length === 0)
            |No tasks.
        each todo, index in todos
            .item
                div.action
                    form(name='done', method='POST', action='/todos/#{todo._id}')
                    input(type='hidden', value=todo._id.toString(), name='id')
                    input(type='hidden', value='true', name='completed')
                    input(type='hidden', value=locals._csrf, name='_csrf')
                    input(type='submit', value='Done')
                div.num
                    span=index+1
                    |.&nbsp;
                div.name
                    //span.name=todo.description
                    a(href="/todos/"+todo._id)= todo.description
                div.edit
                    a(href='/todo/edit') Edit
                div
                     a.btn.btn-danger.delete-article(href='#',data-id=todo._id.toString()) Delete

    script(src='/bower_components/jquery/dist/jquery.js')  
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/javascripts/main.js')

    

    
               
                
        
        

     
       
